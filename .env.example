# MCQ Exam Portal - Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# API CONFIGURATION
# ============================================
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Get these values from your Firebase project settings > General > Your apps
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ============================================
# APPLICATION CONFIGURATION
# ============================================
VITE_APP_NAME=MCQ Exam Portal
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Online Multiple Choice Question Exam Portal

# ============================================
# DEVELOPMENT CONFIGURATION
# ============================================
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# ============================================
# SOCKET.IO CONFIGURATION
# ============================================
VITE_SOCKET_URL=http://localhost:5000

# ============================================
# EXAM CONFIGURATION
# ============================================
VITE_DEFAULT_EXAM_DURATION=60
VITE_AUTO_SAVE_INTERVAL=30000
VITE_WARNING_TIME_MINUTES=5

# ============================================
# UI CONFIGURATION
# ============================================
VITE_THEME=light
VITE_PRIMARY_COLOR=#3B82F6
VITE_SECONDARY_COLOR=#10B981

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_PROCTORING=true
VITE_ENABLE_AUTO_SAVE=true
VITE_ENABLE_FULLSCREEN_MODE=true
VITE_ENABLE_TAB_SWITCH_DETECTION=true

# ============================================
# ANALYTICS CONFIGURATION (Optional)
# ============================================
VITE_GOOGLE_ANALYTICS_ID=
VITE_ENABLE_ANALYTICS=false

# ============================================
# NOTES
# ============================================
# 1. All VITE_ prefixed variables are exposed to the client
# 2. Never put sensitive information in frontend environment variables
# 3. These values are embedded in the build and visible to users
# 4. For production, use production-specific values
# 5. Restart the dev server after changing environment variables